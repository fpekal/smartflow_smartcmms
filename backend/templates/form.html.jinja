{% macro crossout() -%}
  {% for elem in varargs %}
    {% if(loop.index > 1) %}
      /
    {% endif %}
    <label class="crossout"><input type="checkbox" name="sprawne">{{elem}}</label>
  {% endfor %}   
{%- endmacro %}
